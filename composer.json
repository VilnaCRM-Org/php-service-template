{
    "name": "vilnacrm/php-serice-template",
    "description": "Microservices template for modern PHP applications",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "api-platform/core": "^3.0",
        "doctrine/doctrine-bundle": "^2.12",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^2.13",
        "phpmailer/phpmailer": "^6.6",
        "sebastian/phpcpd": "^6.0",
        "symfony/asset": "7.1.*",
        "symfony/cache": "7.1.*",
        "symfony/console": "7.1.*",
        "symfony/dotenv": "7.1.*",
        "symfony/flex": "^2.2",
        "symfony/framework-bundle": "7.1.*",
        "symfony/proxy-manager-bridge": "^6.4",
        "symfony/runtime": "7.1.*",
        "symfony/translation": "7.1.*",
        "symfony/twig-bundle": "7.1.*",
        "symfony/validator": "7.1.*",
        "symfony/yaml": "7.1.*",
        "webonyx/graphql-php": "^14.11"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "captainhook/plugin-composer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.1.*",
            "docker": true
        }
    },
    "require-dev": {
        "behat/behat": "^3.12",
        "captainhook/captainhook": "^5.22",
        "captainhook/plugin-composer": "^5.3",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "friends-of-behat/symfony-extension": "^2.4",
        "friendsofphp/php-cs-fixer": "^3.14",
        "marcocesarato/php-conventional-changelog": "^1.16",
        "nunomaduro/phpinsights": "^2.7",
        "pheromone/phpcs-security-audit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.18.4",
        "psalm/plugin-symfony": "^5.2",
        "ramsey/conventional-commits": "^1.3",
        "symfony/browser-kit": "7.1.*",
        "symfony/css-selector": "7.1.*",
        "symfony/maker-bundle": "^1.47",
        "symfony/phpunit-bridge": "7.1.*",
        "vimeo/psalm": "*",
        "weirdan/doctrine-psalm-plugin": "^2.5"
    },
    "version": "1.1.0"
}
